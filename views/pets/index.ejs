<%- include('../partials/headeruser') %>

  <h3 class="center-align">Your Kennel</h3>
<div class="container">
  <table id="kennel">
    <tbody>
      <% user.pets.forEach(function(pet, idx){ %>

        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.type %></td>
          <td><a href="/pets/<%= pet._id %>">Details</a></td>
          <td><form action="/pets/<%= pet._id %>?_method=DELETE" method="POST" class="delete-form">
            <button class="btn-flat" type="submit">X</button>
          </form></td>
        </tr>
        <% }); %>
    </tbody>
  </table>
</div>

  <%- include('../partials/footer')%>